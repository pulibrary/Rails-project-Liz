<div class="profile-nav-container">
    <%# <div class="flash-messages-container"> %>
        <% if flash[:notice] %>
            <div class="flash-notice">
                <span> <%= flash[:notice] %> </span> 
            </div> 
        <%elsif flash[:alert]%>
            <div class="flash-alert">
                <span> <%= flash[:alert] %> </span>
            </div>
        <% end %>
    <%# </div> %>
 
    <div class="profile-links-nav">
        <%# edit_user_path is the standard path set by resources :users %>
        <%= link_to "Edit", edit_user_path(@user.id), class: "decor-button button-shadow" %> 

        <%# user_path points to route -> delete '/users/:id', to: 'users#destroy' %>
        <%= link_to "Delete", user_path(@user), class: "decor-button button-shadow", data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
        } %> 

        <%= link_to "Back", "/authenticate", class: "decor-button button-shadow" %>
    </div>
</div>

<h1> Your Profile: <%= @user.name %> </h1>
<h3 class="profile-username"> Username: <u><%= @user.username%></u> </h3>

<div class="profile-content">
    <% if @data.any? %>
        <div class="scores-container">
            <% @data.each do |score| %>
                <div class="score-item">
                    <p> <strong> Score:</strong> <%= score.score %> </p>
                    <p> <strong> Date-Time: </strong> <%= score.created_at %> </p>
                </div>
            <% end %>
        </div>
    <% else %>
        <p>No scores found for this user.</p>
    <% end %>

<% else %>
    <p>No scores found for this user.</p>
<% end %>

    <ul>
        <li> <%= link_to "Edit", edit_user_path(@user.id) %> </li>
        <li> <%= link_to "Destroy", user_path(@user), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
        } %> </li>
    </ul>

<%= link_to "Back", "/users" %>
</div>
