<% if flash[:notice] %>
    <div class="flash-notice"> <%= flash[:notice] %> </div> 
<% end%>
<br>

<h1> Your Profile: <%= @user.name %> </h1>

<h3> Username: <%= @user.username%> </h3>

<% if @data.any? %>

    <% @data.each do |score| %>
        <p> <strong> Score:</strong> <%= score.score %> </p>
        <p> <strong> Date-Time: </strong> <%= score.created_at %> </p>
        <br>
    <% end %>

<% else %>
    <p>No scores found for this user.</p>
<% end %>

<%# <ul>     edit_user_path is the standard path set by resources :users %>
        <li> <%= link_to "Edit", edit_user_path(@user.id), class: "btn btn-secondary" %> </li>
        <br>
        <li> <%= link_to "Destroy", users_path(@user), class: "btn btn-secondary", data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
        } %> </li>
    </ul>

<%= link_to "Back", "/" %>
