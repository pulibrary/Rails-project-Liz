<div class="back-button"> 
  <%= link_to "Back", "/", class: "decor-button button-shadow" %> 
</div>
<h1> Scoreboard </h1>

<table id="scoreboard-table">
  <caption class="table-caption"> Top 10 players with the highest scores: </caption>
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Score</th>
      <th scope="col">Date and Time</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.highest_score %></td>
        <td><%= user.datetime %> </td> 
      </tr>
    <% end %>
  </tbody>
</table>
