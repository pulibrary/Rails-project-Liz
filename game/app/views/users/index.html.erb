    <div class="flash-notice"> <%= flash[:notice] %> </div> 
<% end%>
<h1> Welcome to Liz's Connect4 Game! </h1>

<%# edit_profile_path automatically generates '/edit_profile' to match route %>
<%= link_to "Profile", edit_profile_path %>


<h2> Instructions: <h2>
<ol>
    <li> To access and play the game, first <%= link_to "create an account", create_account_path %> 
